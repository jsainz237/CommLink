<p id="notice"><%= notice %></p>

<h2>Ratings</h2>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.score %></td>
        <td><%= rating.comment %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Rating', new_rating_path %>
<% else %>
  <p>Please <span><%= link_to "sign in", new_user_session_path %></span> to leave a review</p>
<% end %>

