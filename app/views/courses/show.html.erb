<p id="notice"><%= notice %></p>
  
<h3>
  <strong>Name:</strong>
  <%= @course.name %>
</h3>

<h3>
  <strong>Number:</strong>
  <%= @course.number %>
</h3>

<h3>
  <strong>Description:</strong>
  <%= @course.description %>
</h3>

<h3>
  <strong>Instructor:</strong>
  <% for @instructor in @course.instructors %>
    <p><%= @instructor.name %></p>
  <% end %>
</h3>

<h2>Reviews:</h2>

<% if @course.ratings.size === 0 %>
  <h2>No ratings yet</h2>
  <h3>Be the first to leave a review</h3>
<% else %>
  <h2>Average Rating: <%= @course.ratings.average(:score).round(1) %></h2>
<% end %>
<% @course.ratings.each do |rating| %>
  <h3>Score: <%= rating.score %></h3>
<% end %>

    <% if user_signed_in? %>
      <%= link_to 'Add Review', new_course_ratings_path(@course) %>
    <% else %>
      <p>
        To leave a review, please <%= link_to 'sign in', new_user_session_path %> or
        <%= link_to 'create an account', new_user_registration_path %>.
      </p>
    <% end %>

    <br>

    <%= link_to like_course_path(@course), method: :put do %>
      <i class="fas fa-thumbs-up"></i>
      <%= @course.get_upvotes.size %><!--replace this with an icon later-->
    <% end %>

<% if user_signed_in? && current_user.try(:admin) %>
  <%= link_to 'Edit', edit_course_path(@course) %> |
<% end %>
<%= link_to 'Back', courses_path %>